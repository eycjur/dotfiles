[include]
    path = ~/dotfiles/.gitconfig.local
    path = ~/.gitconfig.local

[alias]
    addp = add -p
    cm = commit -v
    co = checkout
    br = branch
    dff = diff
    dfc = diff --cached
    cma = commit --amend
    ch = cherry-pick
    cl = clean
    clf = clean -f
    down = restore --staged
    fetcha = fetch --all
    pu = push --set-upstream origin HEAD
    pushf = push --force-with-lease --force-if-includes --set-upstream origin HEAD
    rm = rm --cached
    rs = restore
    rb = rebase
    rbi = rebase -i
    rbc = rebase --continue
    ss = stash save -u
    st = status
    sp = stash pop
    sp-abort = reset --merge
    sw = switch
    reset-ammend = reset --soft HEAD@{1}

    # いい感じのグラフでログを表示
    graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    gr = graph
    graph-all = log --graph --all --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'

    # Untracked filesを表示
    st-all = st -uall

    # 行ごとの差分じゃなくて，単語レベルでの差分を色付きで表示する
    diff-word = diff --word-diff

    # 現在のブランチのリモートブランチを追跡する
    set-upstream = "!git branch --set-upstream-to=origin/$(git rev-parse --abbrev-ref HEAD)"

[branch]
    sort = -committerdate
    autoSetupMerge = always

[color]
    ui = true

[column]
    ui = auto

[commit]
    verbose = true

[core]
    excludesfile = ~/.config/git/ignore
    autocrlf = input
    quotepath = false
    editor = vim
    pager = "LESSCHARSET=utf-8 less"
    whitespace = cr-at-eol
    ignorecase = false

[diff]
    algorithm = histogram
    mnemonicPrefix = true
    colorMoved = plain
    renames = true

[diff "sjis"]
    textconv = iconv -f sjis

[fetch]
    prune = true
    pruneTags = true
    all = true

[http]
    postBuffer = 10M

[init]
    defaultBranch = main

[merge]
    conflictstyle = zdiff3

[pager]
    difftool = true

[pull]
    rebase = true
    default = current

[push]
	default = current
    autoSetupRemote = true

[rerere]
    enabled = true
    autoupdate = true

[rebase]
    autostash = true
    updateRefs = true

[safe]
    directory = *

[tag]
    sort = version:refname
