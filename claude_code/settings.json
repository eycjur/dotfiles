{
  "env": {
    "MAX_THINKING_TOKENS": "31999",
    "DISABLE_TELEMETRY": "1"
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(npm install:*)",
      "Bash(npm run:*)",
      "Bash(npm uninstall:*)",
      "Bash(npx husky:*)",
      "Bash(gemini:*)",
      "Bash(tree:*)",
      "Bash(grep:*)",
      "Bash(poetry run python test:*)",
      "Bash(pytest:*)",
      "Bash(pre-commit run:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git pull:*)",
      "Bash(git fetch:*)",
      "Bash(git switch:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr view:*)",
      "Bash(make:*)",
      "Edit(./src/**)",
      "WebSearch",
      "mcp__serena",
      "mcp__codex__codex"
    ],
    "deny": [
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./credentials/**)",
      "Read(./*credentials*)",
      "Read(./secrets/**)",
      "Bash(gh issue create:*)",
      "Bash(gh issue delete:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr close:*)",
      "Bash(gh repo delete:*)",
      "Bash(git push:*)",
      "Bash(rm:*)",
      "Bash(python:*)",
      "Bash(python3:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo -e \"\\a\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "npx ccusage@latest statusline"
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "--yes",
        "@upstash/context7-mcp"
      ],
      "env": {}
    },
    "chromeDevtools": {
      "command": "npx",
      "args": [
        "--yes",
        "chrome-devtools-mcp",
        "--headless=true",
        "--isolated=true"
      ],
      "env": {}
    }
  }
}
